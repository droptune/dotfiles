#!/bin/bash

echo "Merging laptop to local master..."
cd ~pixelduck/wiki
git switch master
git merge laptop
if [ $? -ne 0 ];then exit 1; fi

echo "Merging cardy to cardy master..."
cd /run/media/pixelduck/cardy/wiki
git switch master
git pull
git switch cardy
git merge master
if [ $? -ne 0 ];then exit 1; fi
git push

echo "Merging cardy to local master..."
cd ~pixelduck/wiki
git switch master
git merge cardy
if [ $? -ne 0 ];then exit 1; fi
git switch laptop
git merge master
